<%layout("boilerplate")-%>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>
            <%= listing.title %>
        </h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img"
            alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %>
            </p>
            <p class="card-text">&#8377;
                <%= listing.price.toLocaleString("en-IN") %>
            </p>
            <p class="card-text">
                <%= listing.location %>
            </p>
            <p class="card-text">
                <%= listing.country %>
            </p>
        </div>
    </div>



 <div class="btns">
    <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

        <form method="POST"
            action="/listings/<%=listing._id%> ?_ method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
 </div>
</div>