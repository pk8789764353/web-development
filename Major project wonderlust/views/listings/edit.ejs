<%layout("boilerplate")-%>
<body>
    <h3>Edit your listing</h3>
    <form action="/listings/<%=listings.id%>?_method=put" method="post">
        <input type="text" name="listings[title]" value="<%=listings.title%>"><br><br>
        <textarea name="listings[description]" ><%=listings.description%></textarea>
        <br><br>
        <input type="text" name="listings[image]" value="<%=listings.image%>">
        <br><br>
        <input type="number" name="listings[price]" value="<%=listings.price%>">
        <br><br>
        <input type="text" name="listings[location]" value="<%=listings.location%>">
        <br><br>
        <input type="text" name="listings[country]" value="<%=listings.country%>"><br><br>
        <button>Submit</button>
    </form>

</body>
